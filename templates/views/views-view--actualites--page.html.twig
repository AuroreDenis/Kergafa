'view',
'view-id-' ~ id,
'view-display-id-' ~ display_id,
dom_id ? 'js-view-dom-id-' ~ dom_id,'view-actualites',
'contenu',
'all-pages-contenu'] %}

<div {{ attributes.addClass(classes) }}>

